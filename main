#include<iostream>
using namespace std;
bool KTHT(int n) {
	int s = 0;
	for (int i = 1; i < n; i++)
	{
		if (n%i==0)
		{
			S += i;
		}
	}
	if (s==n)
	{
		return true;
	}
	return false;
}

void main(){

